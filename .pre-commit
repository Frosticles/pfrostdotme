#!/bin/bash

git diff --name-only | grep ".*\.html$" | xargs -I % html-minifier --collapse-whitespace \
                             --remove-comments --remove-optional-tags --remove-redundant-attributes \
                             --remove-script-type-attributes --remove-tag-whitespace \
                             --minify-js true --use-short-doctype % -o %.min

git diff --name-only | grep ".*\.css$" | xargs -I % csso % --output %.min

git diff --name-only | grep ".*\.js$" | xargs -I % uglifyjs --compress --mangle --verbose -o %.min -- %

find ./ -name "*.min" | xargs -I % brotli --verbose --best --force %

git diff --name-only | grep ".*\.svg$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.txt$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.xml$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.csv$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.json$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.bmp$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.otf$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.ttf$" | xargs -I % brotli --verbose --best --force %
git diff --name-only | grep ".*\.webmanifest$" | xargs -I % brotli --verbose --best --force %

find ./ -name "*.min" | xargs -I % zopfli -v --i15 %

git diff --name-only | grep ".*\.svg$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.txt$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.xml$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.csv$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.json$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.bmp$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.otf$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.ttf$" | xargs -I % zopfli -v --i15 %
git diff --name-only | grep ".*\.webmanifest$" | xargs -I % zopfli -v --i15 %

find ./ -name "*.min.gz" | xargs -I % rename -f -v 's/\.min.gz$/.gz/' %

find ./ -name "*.min.br" | xargs -I % rename -f -v 's/\.min.br$/.br/' %

find ./ -name "*.min" | xargs rm

git add .